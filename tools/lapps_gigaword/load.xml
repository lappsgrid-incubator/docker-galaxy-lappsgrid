<tool id="gigaword.load" name="Gigaword Load" version="1.0.0">
  <description>Retrieves a single document from English Gigaword.</description>
  <command interpreter="lsd">load.lsd $token $input $output $corpus</command>
  <inputs>
    	<param name="corpus" type="select">
    		<option value="gigaword">Kidnap 1 (Gigaword)</option>
    		<option value="kidnap">Kidnap 2 (Gigaword)</option>
    	</param>
    <param name="input" type="data" format="txt"/>
    <param name="token" type="hidden" label="OAuth Token" value="123abc"/>
  </inputs>
  <outputs>
    <data name="output" format="lif" label="Output"/>
  </outputs>
  <!--
  <tests>
    <test>
      <param name="input" value="/Users/suderman/Projects/Galaxy/text.json"/>
      <output name="output" file="/Users/suderman/Projects/Galaxy/tokens.json"/>
    </test>
  </tests>
  -->
  <help>Retrieves a single document from English Gigaword 5th Ed.
  <p>Unlike the <em>get</em> tool, this tool expects the document key to be
  store in the input file.
  </help>
</tool>
